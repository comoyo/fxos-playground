$bgColor1 = #f4f4f4
$bgColor2 = #f8f8f8

body
  margin 0
  padding 0
  font-family sans-serif

.dailyContent
  background-color $bgColor1;
  background-image linear-gradient(45deg, $bgColor2 25%, transparent 25%, transparent 75%, $bgColor2 75%, $bgColor2),
  linear-gradient(-45deg, $bgColor2 25%, transparent 25%, transparent 75%, $bgColor2 75%, $bgColor2);
  background-size 6px 6px;
  margin 0
  padding 0px
  overflow auto

.cantineContent
  background-color #fff
  margin 20px 10px 0 15px
  border 1px solid #aaa
  border-radius 3px
  table
    padding 0 10px 10px 10px

.cantineHeader
  width 100%
  margin 15px 0

.cantineName
  font-size 80%
  width 50%
  display inline-block
  span
    padding-left 10px

.cantineLocation
  text-align right
  width 50%
  color #ebebeb
  font-size 110%
  display inline-block
  overflow clip
  span
    padding-right 10px
