$bgColor1 = #f4f4f4
$bgColor2 = #f8f8f8
$shadowColor = #aaa
$shadowSize = 2px
$shadowBlurSize = 1px

*
  margin 0
  padding 0

html, .fullHeight
  height 100%

body
  margin 0
  padding 0
  font-family Arial, sans-serif
  height 100%

.lunchtimeRoot
  max-width 700px
  margin 0 auto

.dailyContainer
  background-color $bgColor1;
  background-image linear-gradient(45deg, $bgColor2 25%, transparent 25%, transparent 75%, $bgColor2 75%, $bgColor2),
  linear-gradient(-45deg, $bgColor2 25%, transparent 25%, transparent 75%, $bgColor2 75%, $bgColor2);
  background-size 6px 6px;
  overflow auto
  overflow-y: scroll; /* has to be scroll, not auto */
  -webkit-overflow-scrolling: touch;

.dailyHeader
  width 100%
  line-height 40px
  background-color #222
  color #c8c8c8
  font-family "Varela Round", sans-serif
  .header
    display inline-block
  .element1
    width 10%
  .element2
    width 40%
    text-align right
  .element3
    width 50%

$dailyFooterHeight = 40px

.dailyAllButFooter
  min-height 100%

.dailyContent
  overflow hidden
  clear both
  h2
    font-family "Baskerville", serif
    font-weight lighter
    font-style italic
    text-align center
    margin 0
    padding-top 10px
    width 100%

.dailyFooter
  margin 20px 0 10px 0
  font-family "Gruppo"
  font-size 150%
  font-weight bold
  width 100%
  text-align center
  color #ddd
  clear both

.cantineContent
  background-color #fff
  margin 20px 10px 0 15px
  border 1px solid #aaa
  border-radius 3px
  table
    padding 0 10px 10px 10px
  th
    vertical-align top
    font-weight normal
    text-align right
  td
    padding-left 10px
    padding-bottom 5px

.cantineHeader
  width 100%
  margin 10px 0

shadow(hoff, voff)
  -webkit-box-shadow hoff voff $shadowBlurSize $shadowColor, 0 voff $shadowBlurSize $shadowColor
  -moz-box-shadow hoff voff $shadowBlurSize $shadowColor, 0 voff $shadowBlurSize $shadowColor
  box-shadow hoff voff $shadowBlurSize $shadowColor, 0 voff $shadowBlurSize $shadowColor

$cantineNamePadding = 2px 10px 1px 10px

$oasenColor = #808080
$olivenlundenColor = #58b763
$variatioColor = #3886c3
$happyLandingColor = #c33160

.Oasen
  background-color $oasenColor
.Olivenlunden
  background-color $olivenlundenColor
.Variatio.Delectat
  background-color $variatioColor
.Happy.Landing
  background-color $happyLandingColor

cantineNameFlagBackgroundImg(col)
  background-image linear-gradient(0deg, transparent 32%, col 32%, col),
  linear-gradient(30deg, transparent 25%, darken(col, 50%) 25%, darken(col, 50))

.cantineName
  font-size 14px
  width 50%
  display inline-block
  .nameContent
    padding $cantineNamePadding
    height 16px
    shadow(2px, 2px)
    display inline-block
  .cantineNameFlag
    position relative
    top 12px
    width 10px
    height 27px
    margin-top -2px
    margin-left -@width
    display inline-block
    background-size @width @height
  .flagOasen
    cantineNameFlagBackgroundImg($oasenColor)
  .flagOlivenlunden
    cantineNameFlagBackgroundImg($olivenlundenColor)
  .flagVariatio.Delectat
    cantineNameFlagBackgroundImg($variatioColor)
  .flagHappy.Landing
    cantineNameFlagBackgroundImg($happyLandingColor)

.cantineLocation
  text-align right
  width 50%
  color #ebebeb
  font-size 110%
  font-weight bold
  display inline-block
  overflow clip
  span
    padding-right 10px

.dataUnavailable
  width 100%
  text-align center
  color red
  padding 20px 0 50px 0
